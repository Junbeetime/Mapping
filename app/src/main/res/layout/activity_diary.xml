<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1E2"
    android:orientation="vertical"
    tools:context="com.gachon.mapping.Diary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_back"/>
        <include layout="@layout/layout_menu"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btn_title"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text="일기 쓰는중"
        android:textColor="#5D5D5D"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <EditText
        android:id="@+id/diary_subject"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:lines="10"
        android:maxLines="10"
        android:text="제목을 써주세요"
        android:textColor="#5D5D5D"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/diary_imageview"
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_below="@id/diary_subject"
        android:layout_marginTop="-62dp"
        android:paddingStart="30dp"
        android:paddingTop="0dp"
        android:paddingEnd="30dp"
        android:paddingBottom="50dp"
        android:src="@drawable/travel_image" />

    <EditText
        android:id="@+id/diary_text"
        android:layout_width="376dp"
        android:layout_height="373dp"
        android:layout_below="@id/diary_imageview"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-113dp"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:gravity="center"
        android:lines="10"
        android:maxLines="10"
        android:text="일기 내용을 써주세요"
        android:textColor="#5D5D5D" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_above="@id/diary_imageview"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_location_on_24" />


</RelativeLayout>