<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1E2">


    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text="공유하는 일기"
        android:textColor="#5D5D5D"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/login_subtitle"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="285dp"
        android:fontFamily="@font/sangju_haerye"
        android:text="with 잇맵"
        android:textColor="#5D5D5D"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <EditText
        android:id="@+id/login_textid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="307dp"
        android:ems="10"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:hint="아이디를 입력해주세요"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="#5D5D5D"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <EditText
        android:id="@+id/login_text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="345dp"
        android:ems="10"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:hint="비밀번호를 입력해주세요"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="#5D5D5D"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <CheckBox
        android:id="@+id/login_idsave_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="317dp"
        android:fontFamily="@font/sangju_haerye"
        android:text="ID 저장"
        android:textSize="10sp" />


    <CheckBox
        android:id="@+id/login_autologin_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="201dp"
        android:layout_marginBottom="317dp"
        android:fontFamily="@font/sangju_haerye"
        android:text="자동로그인"
        android:textSize="10sp" />


    <Button
        android:id="@+id/login_login_Button"
        android:layout_width="194dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="107dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/solid_diary_button"
        android:fontFamily="@font/sangju_gotgam"
        android:text="로그인" />

    <Button
        android:id="@+id/login_signup_Button"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="234dp"
        android:background="@drawable/solid_diary_button"
        android:fontFamily="@font/sangju_gotgam"
        android:text="회원가입"

        android:textSize="10sp" />

    <Button
        android:id="@+id/login_find_Button"
        android:layout_width="108dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="193dp"
        android:layout_marginBottom="234dp"
        android:background="@drawable/solid_diary_button"
        android:fontFamily="@font/sangju_gotgam"
        android:text="아이디/비밀번호 찾기"

        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="313dp"
        android:layout_height="525dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="-14dp"
        android:layout_marginBottom="-166dp"
        app:srcCompat="@drawable/loginbackgorund" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="257dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/sun" />


</RelativeLayout>