<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <CheckedTextView
        android:id="@+id/ck_click_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:checkMark="?android:listChoiceIndicatorSingle"
        android:background="@drawable/solid_diary_border"
        android:drawableLeft="@drawable/face"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:gravity="center_vertical"
        android:text="이름:\n제목:\n위치:"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_click_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/solid_diary_border"
        android:drawableTop="@drawable/pencil"/>
</LinearLayout>