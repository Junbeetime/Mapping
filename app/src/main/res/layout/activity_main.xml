<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1E2"
    android:orientation="vertical"
    tools:context=".Diary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_back"/>
        <include layout="@layout/layout_menu" />
    </LinearLayout>




    <TextView
        android:id="@+id/btn_title"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text=" 지도 펼쳐보기"
        android:textColor="#5D5D5D"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.androidSu.gms.maps.pportMapFragment"
        android:layout_width="1000px"
        android:layout_height="1300px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        tools:context=".MapsActivity"
        tools:ignore="MissingClass" />

    <Button
        android:id="@+id/map_marking_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#EFF1F1"
        android:text="표시하기"
        android:textStyle="bold"
        android:fontFamily="@font/sangju_haerye"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/diary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="#EFF1F1"
        android:text="일기장"
        android:fontFamily="@font/sangju_haerye"
        android:textStyle="bold"
        android:textColor="@color/black" />

</RelativeLayout>