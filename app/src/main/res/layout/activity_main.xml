<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1E2"
    android:orientation="vertical"
    tools:context=".Diary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_back"/>
        <include layout="@layout/layout_menu" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_title"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text=" 지도 펼쳐보기"
        android:textColor="#5D5D5D"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="1000px"
        android:layout_height="1300px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        tools:context=".MapsActivity"
        tools:ignore="MissingClass" />

    <Button
        android:id="@+id/main_map_marking_button"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/solid_diary_button"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text="표시하기"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_diary_share_button"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/solid_diary_button"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text="공유 일기장"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_diary_button"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/solid_diary_button"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text="일기장"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>